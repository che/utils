#!/bin/bash

LANG="C"

RANDOM_GEN_USERNAME_LENGTH=${RANDOM_GEN_USERNAME_LENGTH:=32}
RANDOM_GEN_PASSWORD_LENGTH=${RANDOM_GEN_PASSWORD_LENGTH:=511}

RANDOM_GEN_USERNAME=""
RANDOM_GEN_PASSWORD=""

CHARACTER_DIGEST="1538607249"
CHARACTER_DOWNCASE="uwnmertyqiojklzxcpasdfghvb"
CHARACTER_OTHER="E\`R!@TX#I$%S*D(F^&H:J?K-Z;YC_=+}B.N\"M{~/]Q)W[\\O|P>A,GV<L'U"


random_gen_username()
{
    USERNAME_CHARACTERS="${CHARACTER_DIGEST}${CHARACTER_DOWNCASE}"
    USERNAME_CHARACTERS_SIZE=${#USERNAME_CHARACTERS}

    # Definition of first random letter
    RANDOM_GEN_USERNAME="${CHARACTER_DOWNCASE:$(($RANDOM % ${#CHARACTER_DOWNCASE})):1}"

    for (( i = 1; i < $RANDOM_GEN_USERNAME_LENGTH; i++ ))
    do
        RANDOM_GEN_USERNAME="${RANDOM_GEN_USERNAME}${USERNAME_CHARACTERS:$(($RANDOM % $USERNAME_CHARACTERS_SIZE)):1}"
    done

    echo $RANDOM_GEN_USERNAME
}

random_gen_password()
{
    PASSWORD_CHARACTERS="${CHARACTER_OTHER}${USERNAME_CHARACTERS}"$
    PASSWORD_CHARACTERS_SIZE=${#PASSWORD_CHARACTERS}

    for (( i = 1; i <= $RANDOM_GEN_PASSWORD_LENGTH; i++ ))
    do
        RANDOM_GEN_PASSWORD="${RANDOM_GEN_PASSWORD}${PASSWORD_CHARACTERS:$(($RANDOM % $PASSWORD_CHARACTERS_SIZE)):1}"
    done

    echo $RANDOM_GEN_PASSWORD
}

random_gen_username
random_gen_password
