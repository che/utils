#!/bin/bash

RANDOM_GEN_USERNAME_LENGTH=32
RANDOM_GEN_PASSWORD_LENGTH=256

RANDOM_GEN_USERNAME=''
RANDOM_GEN_PASSWORD=''

USERNAME_CHARACTERS=()
PASSWORD_CHARACTERS=()

CHARACTER_DIGEST=( 1 5 3 8 6 0 7 2 4 9 )
CHARACTER_DOWNCASE=( u w n m e r t y q i o j k l z x c p a s d f g h v b )
CHARACTER_OTHER="( E \` R ! @ T Y # I $ % S D ( F ^ & H : J K - Z ; X C _ = + } B . N \" M { ~ / ] Q ) W [ \ O | P > A , G V < L ' U )"


## USERNAME

# Definition of first random letter
CHARACTER_DOWNCASE_SIZE=${#CHARACTER_DOWNCASE[*]}
RANDOM_GEN_USERNAME="${CHARACTER_DOWNCASE[ $(($RANDOM % $CHARACTER_DOWNCASE_SIZE)) ]}"

USERNAME_CHARACTERS=(${CHARACTER_DIGEST[*]} ${CHARACTER_DOWNCASE[*]})
USERNAME_CHARACTERS_SIZE=${#USERNAME_CHARACTERS[*]}

for (( i = 1; i < $RANDOM_GEN_USERNAME_LENGTH; i++ )); do
  RANDOM_GEN_USERNAME="$RANDOM_GEN_USERNAME${USERNAME_CHARACTERS[ $(($RANDOM % $USERNAME_CHARACTERS_SIZE)) ]}"
done


## PASSWORD

PASSWORD_CHARACTERS=(${USERNAME_CHARACTERS[*]} ${CHARACTER_OTHER[*]})
PASSWORD_CHARACTERS_SIZE=${#PASSWORD_CHARACTERS[*]}

for (( i = 1; i <= $RANDOM_GEN_PASSWORD_LENGTH; i++ )); do
  RANDOM_GEN_PASSWORD="$RANDOM_GEN_PASSWORD${PASSWORD_CHARACTERS[ $(($RANDOM % $PASSWORD_CHARACTERS_SIZE)) ]}"
done


echo $RANDOM_GEN_USERNAME
echo $RANDOM_GEN_PASSWORD
